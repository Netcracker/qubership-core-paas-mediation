{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "http://example.com/example.json",
  "type": "object",
  "title": "The PaaS Mediation schema",
  "required": [
    "DEPLOYMENT_SESSION_ID"
  ],
  "description": "The JSON schema for PaaS Mediation service.",
  "default": { },
  "examples": [
    {
      "PAAS_PLATFORM": "",
      "CPU_REQUEST": "50m",
      "CPU_LIMIT": "100m",
      "IMAGE_REPOSITORY": "",
      "MEMORY_LIMIT": "100Mi",
      "NAMESPACE": "",
      "REPLICAS": 1,
      "TAG": "",
      "paasMediation": {
        "readinessProbe": {
          "initialDelaySeconds": 5,
          "timeoutSeconds": 30
        },
        "livenessProbe": {
          "initialDelaySeconds": 180,
          "timeoutSeconds": 30
        }
      },
      "ARTIFACT_DESCRIPTOR_VERSION": "",
      "MONITORING_ENABLED": false,
      "CLOUD_TOPOLOGY_KEY": "kubernetes.io/hostname",
      "DISABLE_DEPRECATED_API": false,
      "LOG_LEVEL": "info",
      "PAAS_VERSION": "",
      "K8S_SERVICE_TYPE": "HEADLESS"
    }
